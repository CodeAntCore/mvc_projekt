@model mvc_projekt.Models.Zadanie

@{
    ViewData["Title"] = "Szczegóły zadania";
}

<h1>Szczegóły zadania</h1>

<div>
    <h4>Zadanie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tytul)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tytul)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kategoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kategoria.Nazwa)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status.Nazwa)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ZadanieNadrzedne)
        </dt>
        <dd class="col-sm-10">
            @if (Model.ZadanieNadrzedne != null)
            {
                <a asp-action="Details" asp-route-id="@Model.ZadanieNadrzedne.Id">
                    @Model.ZadanieNadrzedne.Tytul
                </a>
            }
            else
            {
                <span>Brak</span>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ZadaniaPodrzedne)
        </dt>
        <dd class="col-sm-10">
            @if (Model.ZadaniaPodrzedne != null)
            {
                <a asp-action="Details" asp-route-id="@Model.ZadaniaPodrzedne.Id">
                    @Model.ZadaniaPodrzedne.Tytul
                </a>
            }
            else
            {
                <span>Brak</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a>
    <a class="btn btn-secondary" asp-action="Index">Powrót do listy</a>
</div>
